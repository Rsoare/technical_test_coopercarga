// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
   provider = "prisma-client-js"
}

datasource db {
   provider = "sqlite"
   url      = "file:./dev.db"
}

model Product {
   id              Int      @id @default(autoincrement())
   image_url       String
   price           Float
   seller          String
   sport           String
   available_sizes String[]
   details         String
   createdAt       DateTime @default(now())
   updatedAt       DateTime @updatedAt()
   Size            Size[]

   @@map("products")
}

model Size {
   id              Int      @id @default(autoincrement())
   name            String
   email           String   @unique
   telephone       Int
   address         String
   createdAt       DateTime @default(now())
   updatedAt       DateTime @updatedAt
   available_sizes Product  @relation(fields: [productId], references: [id])
   productId       Int

   @@map("sizes")
}
